@article{hockendorff17characterizing,
  title = {Characterizing fish responses to a river restoration over 21 years based on species' traits: fish responses to river restoration},
  shorttitle = {Characterizing fish responses to a river restoration over 21 years based on species' traits},
  author = {H{\"o}ckendorff, Stefanie and Tonkin, Jonathan D. and Haase, Peter and {Bunzel-Dr{\"u}ke}, Margret and Zimball, Olaf and Scharf, Matthias and Stoll, Stefan},
  year = {2017},
