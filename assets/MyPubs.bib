@article{hore25flow,
  title = {Flow matters: unravelling the interactive influences of flow variation and non-native trout on vulnerable galaxiids},
  shorttitle = {Flow Matters},
  author = {Hore, Olivia R. and Tonkin, Jonathan D. and Boddy, Nixie C. and McIntosh, Angus R.},
