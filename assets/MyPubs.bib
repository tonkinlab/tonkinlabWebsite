@article{tonkin18latitudinal,
  title = {Do latitudinal gradients exist in New Zealand stream invertebrate metacommunities?},
  author = {Tonkin, Jonathan D. and Death, Russell G. and Muotka, Timo and Astorga, Anna and Lytle, David A.},
